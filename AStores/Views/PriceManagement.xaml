                    <TextBlock Grid.Row="2" Grid.Column="0"  Style="{StaticResource regularTextBlockRight}">产品名称：</TextBlock>
                    <TextBlock Grid.Row="2" Grid.Column="1"  Style="{StaticResource regularTextBlockLeft}">Apple</TextBlock>

                    <TextBlock Grid.Row="3" Grid.Column="0"  Style="{StaticResource regularTextBlockRight}">当前价格：</TextBlock>
                    <TextBlock Grid.Row="3" Grid.Column="1"  Style="{StaticResource regularTextBlockLeft}" > 2.50</TextBlock>

                    <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource regularTextBlockRight}" FontSize="23" Foreground="Black">更 新 价 格：</TextBlock>
                    <TextBox Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" Style="{StaticResource valueText}" Text="2.38"  ></TextBox>
                    <!--<TextBlock Name="cashText" Margin="20" ></TextBlock>-->

                    <Border Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="3">
